{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-stdlib=libc++",
                "-g",

                "src/lexer.cpp",
                "src/source.cpp",
                "src/parser.cpp",
                "src/print.cpp",
                "src/ast.cpp",
                "src/compiler.cpp",

                "-o",
                "bin/ggcode",

                // Run `llvm-config --cxxflags --ldflags --system-libs --libs core` to figure these out...
                "-I/Users/cankov/Downloads/clang+llvm-6.0.0-x86_64-apple-darwin/include",
                "-L/Users/cankov/Downloads/clang+llvm-6.0.0-x86_64-apple-darwin/lib",
                "-lLLVMCore",
                "-lLLVMBinaryFormat",
                "-lLLVMSupport",
                "-lLLVMDemangle",
                "-lz",
                "-lcurses",
                "-lm",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}